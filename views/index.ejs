<!DOCTYPE html>
<html>
    <head>
        <title>
            <? if (title) { ?>
                <?= title ?>
            <? } ?>
        </title>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <script src="/public/js/client.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2" style="margin-bottom: 10px;">
                        <div class="form-group">
                            <form action="/youtubeUrl" method="post">
                                <h1 style="text-align: center">Youtube URL</h1>
                                <div class="input-group">
                                    <input type="text" class="form-control" name="youtubeUrl" placeholder="URL">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" id="myButton" type="button">Add</button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-8 col-md-offset-2" style="margin-bottom: 10px; text-align: center">
                        <form action="/url" method="get">
                            <div class="bs-example" id="player" data-example-id="responsive-embed-16by9-iframe-youtube">
                                <video id="videoPlayer" style="width: 100%;height: 400px;" playsinline controls autoplay>
                                    <source src="http://localhost:3000/url" type="video/mp4">
                                </video>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-10 col-md-offset-1" style="margin-bottom: 10px;">
                        <h3 style="text-align: center;">Video Queue</h3>
                        <div style="display:block; overflow:auto; height:200px; width:100%;">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Queue</th>
                                        <th>Date</th>
                                        <th>Video Name</th>
                                        <th>Username</th>
                                    </tr>
                                </thead>
                                <? if (data) { ?>
                                    <tbody >
                                        <? for(var i=0; i < data.length; i++) { ?>
                                            <tr>
                                                <td><?= i+1 ?></td>
                                                <td><?= data[i].queue ?></td>
                                                <td><?= data[i].videoName ?></td>
                                                <td><?= data[i].user ?></td>
                                            </tr>
                                        <? } ?>
                                    </tbody> 
                                <? } ?>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>